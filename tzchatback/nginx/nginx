# 0) www â†’ ë¹„-www ë¦¬ë‹¤ì´ë ‰íŠ¸ (HTTP)
server {
    listen 80;
    listen [::]:80;
    server_name www.tzchat.tazocode.com;
    return 301 https://tzchat.tazocode.com$request_uri;
}

# 1) HTTP â†’ HTTPS ë¦¬ë‹¤ì´ë ‰íŠ¸ + ACME ê²€ì¦ í—ˆìš© (ë¹„-www)
server {
    listen 80;
    listen [::]:80;
    server_name tzchat.tazocode.com;

    location /.well-known/acme-challenge/ {
        root /var/www/html;
        access_log /var/log/nginx/acme_access.log;
        error_log  /var/log/nginx/acme_error.log;
    }
    return 301 https://$host$request_uri;
}

# 2) HTTPS ì„œë²„ (ë¹„-www)
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name tzchat.tazocode.com;

    # --- SSL (Let's Encrypt) ---
    ssl_certificate     /etc/letsencrypt/live/tzchat.tazocode.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/tzchat.tazocode.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    client_max_body_size 20m;

    # CSP (Ionic/Capacitor í˜¸í™˜)
    add_header Content-Security-Policy "
      default-src 'self' capacitor:;
      connect-src 'self' https: wss: capacitor: data: blob:;
      img-src 'self' https: data: blob:;
      media-src 'self' https: data: blob:;
      font-src 'self' https: data:;
      style-src 'self' 'unsafe-inline' https: data:;
      script-src 'self' 'unsafe-inline' 'unsafe-eval' https: blob:;
      frame-ancestors 'self';
      base-uri 'self';
    " always;

    # ê³µí†µ í”„ë¡ì‹œ í—¤ë”
    proxy_set_header Host              $host;
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Host  $host;
    proxy_set_header X-Forwarded-Port  443;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_http_version 1.1;

    # í”„ë¡ íŠ¸(dist) ë£¨íŠ¸
    root  /home/tazofarm/project/tzchat/tzchatapp/dist;
    index index.html;

    # -----------------------------------------------------
    # âœ… ì •ì  ë²•/ì •ì±… ë¬¸ì„œ (SPAë³´ë‹¤ ìš°ì„ )
    # -----------------------------------------------------
    # /legal â†’ /legal/index.html
    location = /legal { return 301 /legal/; }

    # ë””ë ‰í„°ë¦¬ ì •ì  ì„œë¹™(ë¬¸ì„œ ë‚´ë¶€ ë¦¬ì†ŒìŠ¤ ëŒ€ë¹„)
    location /legal/ {
        alias /home/tazofarm/project/tzchat/public/legal/;
        index index.html;
        try_files $uri $uri/ =404;

        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";

        access_log /var/log/nginx/legal_access.log;
        error_log  /var/log/nginx/legal_error.log;
    }

    # ğŸ”’ ìŠ¬ëŸ¬ê·¸ â†’ ì‹¤ì œ íŒŒì¼ ë§¤í•‘ (í”„ë¡ì‹œ ë¶ˆí•„ìš”, HTTP/2 ì•ˆì „)
    #   í•„ìš”ì— ë”°ë¼ ëª©ë¡ì„ ëŠ˜ë¦¬ê±°ë‚˜ ìˆ˜ì •í•˜ì„¸ìš”.
    default_type text/html;
    location = /legal/privacy           { alias /home/tazofarm/project/tzchat/public/legal/01_privacy.html; }
    location = /legal/terms             { alias /home/tazofarm/project/tzchat/public/legal/02_terms.html; }
    location = /legal/location          { alias /home/tazofarm/project/tzchat/public/legal/03_location.html; }
    location = /legal/delete-account    { alias /home/tazofarm/project/tzchat/public/legal/04_delete-account.html; }
    location = /legal/youth             { alias /home/tazofarm/project/tzchat/public/legal/05_youth.html; }
    location = /legal/eula              { alias /home/tazofarm/project/tzchat/public/legal/06_eula.html; }
    location = /legal/cookies           { alias /home/tazofarm/project/tzchat/public/legal/07_cookies.html; }
    location = /legal/data-retention    { alias /home/tazofarm/project/tzchat/public/legal/08_data-retention.html; }
    location = /legal/marketing-consent { alias /home/tazofarm/project/tzchat/public/legal/09_marketing-consent.html; }
    location = /legal/third-parties     { alias /home/tazofarm/project/tzchat/public/legal/10_third-parties.html; }
    location = /legal/processors        { alias /home/tazofarm/project/tzchat/public/legal/11_processors.html; }
    location = /legal/opensource        { alias /home/tazofarm/project/tzchat/public/legal/12_opensource.html; }
    location = /legal/community         { alias /home/tazofarm/project/tzchat/public/legal/13_community.html; }
    location = /legal/report-block      { alias /home/tazofarm/project/tzchat/public/legal/14_report-block.html; }

    # íŒŒë¹„ì½˜(ë£¨íŠ¸)
    location = /favicon.png {
        alias /home/tazofarm/project/tzchat/public/favicon.png;
        try_files $uri =404;
        add_header Cache-Control "public, max-age=86400";
        access_log /var/log/nginx/frontend_access.log;
        error_log  /var/log/nginx/frontend_error.log;
    }

    # ê³¼ê±° ê²½ë¡œ í˜¸í™˜: /privacy(.html) â†’ /legal/privacy
    location = /privacy      { return 301 /legal/privacy; }
    location = /privacy.html { return 301 /legal/privacy; }

    # ì •ì  ì²­í¬
    location /assets/ {
        root /home/tazofarm/project/tzchat/tzchatapp/dist;
        try_files $uri =404;
        expires 30d;
        add_header Cache-Control "public, max-age=2592000, immutable";
        access_log /var/log/nginx/assets_access.log;
        error_log  /var/log/nginx/assets_error.log;
    }

    # Service Worker
    location = /service-worker.js {
        root /home/tazofarm/project/tzchat/tzchatapp/dist;
        try_files $uri =404;
        add_header Cache-Control "no-store";
        add_header Pragma "no-cache";
        add_header Expires "0";
        access_log /var/log/nginx/frontend_access.log;
        error_log  /var/log/nginx/frontend_error.log;
    }

    # ì—…ë¡œë“œ í”„ë¡ì‹œ
    location /uploads/ {
        proxy_pass http://localhost:2000;
        proxy_set_header Authorization $http_authorization;
        proxy_set_header Origin $http_origin;
        access_log /var/log/nginx/uploads_access.log;
        error_log  /var/log/nginx/uploads_error.log;
    }

    # API í”„ë¡ì‹œ
    location /api/ {
        proxy_pass http://localhost:2000;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header Authorization $http_authorization;
        proxy_set_header Origin $http_origin;
        add_header Cache-Control "no-store";
        access_log /var/log/nginx/api_access.log;
        error_log  /var/log/nginx/api_error.log;
    }

    # ë””ë²„ê·¸
    location ^~ /debug/ {
        proxy_pass http://localhost:2000;
        proxy_set_header Authorization $http_authorization;
        proxy_set_header Origin $http_origin;
        add_header Cache-Control "no-store";
        access_log /var/log/nginx/debug_access.log;
        error_log  /var/log/nginx/debug_error.log;
    }

    # WebSocket
    location = /socket.io {
        proxy_pass http://localhost:2000;
        proxy_buffering off;
        proxy_read_timeout 3600s;
        proxy_send_timeout 60s;
        proxy_set_header Authorization $http_authorization;
        proxy_set_header Upgrade    $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Origin     $http_origin;
        access_log /var/log/nginx/ws_access.log;
        error_log  /var/log/nginx/ws_error.log;
    }
    location ^~ /socket.io/ {
        proxy_pass http://localhost:2000;
        proxy_buffering off;
        proxy_read_timeout 3600s;
        proxy_send_timeout 60s;
        proxy_set_header Authorization $http_authorization;
        proxy_set_header Upgrade    $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Origin     $http_origin;
        access_log /var/log/nginx/ws_access.log;
        error_log  /var/log/nginx/ws_error.log;
    }

    # SPA history
    location / {
        try_files $uri $uri/ /index.html;
        access_log /var/log/nginx/frontend_access.log;
        error_log  /var/log/nginx/frontend_error.log;
    }

    # index.html ì¬ê²€ì¦
    location = /index.html {
        try_files $uri =404;
        add_header Cache-Control "max-age=0, must-revalidate";
        access_log /var/log/nginx/frontend_access.log;
        error_log  /var/log/nginx/frontend_error.log;
    }
}
