<script setup lang="ts">
import { ref, onMounted } from 'vue'
import { useRouter } from 'vue-router'
import { IonButton, IonIcon } from '@ionic/vue'
import {
  happyOutline,
  settingsOutline,
  logOutOutline,
  trashOutline
} from 'ionicons/icons'
import { api, AuthAPI } from '@/lib/api'

const router = useRouter()
const icons = { happyOutline, settingsOutline, logOutOutline, trashOutline }

const nickname = ref<string>('')
const meRole = ref<string>('')

/** ë¡œê·¸ì¸ ì‚¬ìš©ì ì •ë³´ ê°€ì ¸ì˜¤ê¸° */
onMounted(async () => {
  try {
    const meRes = await api.get('/api/me')
    nickname.value = meRes.data?.user?.nickname || ''
    meRole.value = meRes.data?.user?.role || ''
    console.log('[SettingsSections] me:', { nickname: nickname.value, role: meRole.value })
  } catch (err) {
    console.error('âŒ GET /me ì‹¤íŒ¨:', err)
  }
})

/** í˜ì´ì§€ ì´ë™ */
const goPage = (path: string) => {
  console.log('[SettingsSections] goPage:', path)
  router.push(path)
}

/** ê´€ë¦¬ì ì´ë™ */
const goAdmin = () => {
  console.log('[SettingsSections] goAdmin â†’ /home/admin')
  router.push('/home/admin')
}

/** ë¡œê·¸ì•„ì›ƒ */
const logout = async () => {
  try {
    await AuthAPI.logout()
    console.info('[SettingsSections] ë¡œê·¸ì•„ì›ƒ ì„±ê³µ â†’ /login')
    router.push('/login')
  } catch (err) {
    console.error('âŒ ë¡œê·¸ì•„ì›ƒ ì‹¤íŒ¨:', err)
  }
}

/** (ì˜ˆì‹œ) íšŒì›íƒˆí‡´ ì§ì ‘ ì‹¤í–‰ ì‹œ ì‚¬ìš©í•  ìˆ˜ ìˆëŠ” í—¬í¼
const withdraw = async () => {
  try {
    await api.post('/api/account/delete-request')
    router.push('/login')
  } catch (e) {
    console.error('âŒ íƒˆí‡´ ìš”ì²­ ì‹¤íŒ¨:', e)
  }
}
*/
</script>

