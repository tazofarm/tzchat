{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/data/regions.js",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "android",
    "ios",
    "public",
    "vite.config.*",
    "vitest.config.*",
    "capacitor.config.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
