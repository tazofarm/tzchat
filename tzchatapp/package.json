{
  "name": "tzchatapp",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "An Ionic project",
  "scripts": {
    "//": "===== 실행/빌드 모드별로 어떤 .env를 읽을지 --mode 로 결정합니다. =====",
    "dev": "vite --host 0.0.0.0 --port 8081 --mode development",
    "dev:remote": "vite --host 0.0.0.0 --port 8081 --mode dev-remote",
    "//build": "===== 웹/앱 빌드 =====",
    "build:web": "vue-tsc --noEmit -p tsconfig.json && vite build --mode web",
    "build:app": "vue-tsc --noEmit -p tsconfig.json && vite build --mode app",
    "preview": "vite preview --port 4173",
    "//types": "===== 품질 점검 =====",
    "check:types": "vue-tsc --noEmit -p tsconfig.json",
    "check:types:node": "tsc -p tsconfig.node.json",
    "//tests": "===== 테스트/린트 =====",
    "test:e2e": "cypress run",
    "test:unit": "vitest",
    "lint": "eslint .",
    "//android": "===== 안드로이드 빌드 =====",
    "android:release": "npm run build:app && npx cap copy android && (cd android && ./gradlew assembleRelease)",
    "android:debug:remote": "cross-env CAP_ENV=debug npx cap run android"
  },
  "dependencies": {
    "@awesome-cordova-plugins/email-composer": "^8.1.0",
    "@capacitor-community/admob": "^7.0.3",
    "@capacitor-community/contacts": "^7.0.0",
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "7.0.1",
    "@capacitor/core": "^7.4.2",
    "@capacitor/geolocation": "^7.1.5",
    "@capacitor/haptics": "7.0.1",
    "@capacitor/keyboard": "7.0.1",
    "@capacitor/local-notifications": "^7.0.3",
    "@capacitor/status-bar": "7.0.1",
    "@ionic/core": "^8.6.5",
    "@ionic/pwa-elements": "^3.3.0",
    "@ionic/vue": "^8.6.5",
    "@ionic/vue-router": "^8.6.4",
    "@vueuse/core": "^13.6.0",
    "axios": "^1.10.0",
    "cordova-plugin-email-composer": "^0.10.1",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.7",
    "emoji-picker-element": "^1.26.3",
    "firebase": "^12.1.0",
    "ionicons": "^7.0.0",
    "pinia": "^3.0.3",
    "socket.io-client": "^4.8.1",
    "swiper": "^11.2.10",
    "vue": "^3.3.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.2",
    "@types/firebase": "^2.4.32",
    "@types/node": "^24.5.0",
    "@vitejs/plugin-legacy": "^5.0.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.3.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.5.0",
    "eslint": "^8.35.0",
    "eslint-plugin-vue": "^9.9.0",
    "jsdom": "^22.1.0",
    "terser": "^5.4.0",
    "typescript": "~5.6.2",
    "vite": "~5.2.0",
    "vitest": "^0.34.6",
    "vue-tsc": "^2.1.10"
  }
}
