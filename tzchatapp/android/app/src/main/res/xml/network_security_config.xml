<?xml version="1.0" encoding="utf-8"?>
<network-security-config>

  <!-- 🧪 디버그 전체에서 HTTP 허용 -->
  <base-config cleartextTrafficPermitted="true" />

  <!-- 에뮬레이터(안드로이드 스튜디오): 호스트PC localhost -> 10.0.2.2 -->
  <domain-config cleartextTrafficPermitted="true">
    <domain>10.0.2.2</domain>
  </domain-config>

  <!-- 실기기에서 사설망 테스트 시: 사용 '호스트'를 정확히 지정하세요.
       ★ 범위/대역 표기는 불가합니다! 예시: 192.168.0.12, 192.168.1.34 등 -->
  <!--
  <domain-config cleartextTrafficPermitted="true">
    <domain>192.168.0.12</domain>
  </domain-config>
  <domain-config cleartextTrafficPermitted="true">
    <domain>192.168.1.34</domain>
  </domain-config>
  -->

</network-security-config>
