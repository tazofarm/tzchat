<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ✅ 내부 캐시 디렉터리: context.getCacheDir() -->
    <!-- 예: Glide/임시 썸네일 등, 삭제해도 무방한 파일 공유 -->
    <cache-path
        name="cache_images"
        path="images/" />

    <!-- ✅ 내부 파일 디렉터리: context.getFilesDir() -->
    <!-- 민감도 높은 파일을 안전하게 공유해야 할 때 (앱 영역) -->
    <files-path
        name="app_files"
        path="shared/" />

    <!-- ✅ 외부 캐시 디렉터리: context.getExternalCacheDir() -->
    <!-- 카메라 촬영 후 임시 저장 등. 앱 삭제 시 함께 정리됨 -->
    <external-cache-path
        name="external_cache_images"
        path="images/" />

    <!-- ✅ 외부 파일(앱 전용) 디렉터리: context.getExternalFilesDir(Environment.DIRECTORY_PICTURES) 등 -->
    <!-- 카메라/갤러리와의 호환이 필요할 때만 사용 -->
    <external-files-path
        name="external_pictures"
        path="Pictures/" />

    <!-- ⛔️ 지양: 외부저장소 전체 노출 (기존) -->
    <!-- <external-path name="my_images" path="." /> -->
</paths>
